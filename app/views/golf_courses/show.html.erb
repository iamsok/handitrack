<h2>Add score for <%= @golf_course.name %></h2>
<h6>Course Rating <%= @golf_course.course_rating %></h6>
<h6>Slope Rating <%= @golf_course.slope_rating %></h6>

<%= form_for GolfCourse.new do |f| %>
<% if @golf_course.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@golf_course.errors.count, "error") %> prohibited this score from being submitted:</h2>

    <ul>
    <% @golf_course.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div><%= f.submit "Add Score", class: "button active" %></div>
<% end %>

<%= link_to "Back", :back %>
