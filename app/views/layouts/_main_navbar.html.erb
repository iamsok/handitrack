<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><strong><a href="/">HandiTrack</a></strong></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">

    <ul class="left">
      <li class="active">
      <% if !user_signed_in? %>
        <%= link_to "Sign up", new_user_registration_path %>
        <% end %>
      </li>

      <% if !user_signed_in? %>
        <li class ="active"><a href="/users/sign_in">Sign In</a></li>
      <% end %>

        <li class="active">
        <%= link_to "Submit a Score", new_score_path %>
      </li>

      <li>
        <%= form_tag(users_path, :method => "get", id: "search-form") do %>
        <ul>
          <li>
            <%= text_field_tag :search, params[:search], placeholder: "Search Friends", class: "radius", name: 'search' %>
          </li>
          <li>
            <%= submit_tag "Search", class: "button radius", :title => nil %>
          </li>
        </ul>
        <% end %>
      </li>
    </ul>
    <ul class="right">
      <%= link_to "Golf Courses", golf_courses_path %>
      <% if user_signed_in? %>
        <li class="active border">

      <%= link_to user_path(current_user) do %>
        <i class="fa fa-user"></i>
        <% end %>
        </li>
        <li class="active">
          <%= link_to "Sign out", logout_path %>
        </li>
    </ul>
    <% end %>
  </section>
</nav>
