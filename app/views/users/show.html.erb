<div class="panel profile_photo">
  <img src="<%= @user.profile_photo %>" atl="profile photos" class="profile"/>
  <div>
    <h3><%= @user.name%></h3>
    <h6><%= "#{@user.city.titleize}, #{@user.state.capitalize} #{@user.zip_code}" %></h6>
    <% if user_signed_in? && current_user == @user %>
      <%= link_to 'Edit Profile', edit_user_registration_path %>
    <% end %>
  </div>
</div>

<h4> Current Handicap: <%= @scores.count < 5 ? 'Requires a minimum of 5 scores' : @user.handicap %>

<table>
  <tr>
    <th>Golf Course</th>
    <th>Score</th>
    <th>Date</th>
  </tr>
    <% recent_scores = @scores.sort_by { |x| x.date }.reverse %>
    <% recent_scores.each do |score| %>
      <tr>
        <td><%= score.tee_rating.golf_course.name %> </td>
        <td><%= score.score %></td>
        <td><%= score.date %></td>
      </tr>
    <% end %>
</table>

<h4>Following</h4>
<ul>
  <% @user.friendships.each do |friendship| %>
    <li>
      <%= link_to friendship.friend.name, user_path(friendship.friend_id) %>
      <%= button_to "remove", user_friendship_path(@user, friendship), :confirm => "Are you sure you want to delete this attachment?", :method => :delete %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Find Friends", users_path %></p>

<h4>Followers</h4>
<ul>
  <% @user.inverse_friends.each do |user| %>
    <li>
      <%= link_to user.name, user_path(user) %></li>
  <% end %>
</ul>

