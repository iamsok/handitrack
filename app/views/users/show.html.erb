<div class="panel profile_photo">
  <img src="<%= @user.profile_photo_url(:thumb) %>" atl="profile photos" class="profile"/>
  <div>
    <h3><%= @user.name%></h3>
  </div>
</div>

<h6><%= "#{@user.city.titleize}, #{@user.state.capitalize} #{@user.zip_code}" %></h6>

<h4> Current Handicap: <%= @scores.count < 5 ? 'Requires a minimum of 5 scores' : @user.handicap %>

<table>
  <tr>
    <th>Golf Course</th>
    <th>Score</th>
    <th>Date</th>
  </tr>
    <% recent_scores = @scores.sort_by { |x| x.date }.reverse %>
    <% recent_scores.each do |score| %>
      <tr>
        <td><%= score.tee_rating.golf_course.name %> </td>
        <td><%= score.score %></td>
        <td><%= score.date %></td>
      </tr>
    <% end %>
</table>

<% if user_signed_in? && current_user == @user %>
  <%= link_to 'Edit Profile', edit_user_registration_path %>
<% end %>
